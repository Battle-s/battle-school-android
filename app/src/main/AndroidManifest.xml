<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umc.battles">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAG" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.umc.battles.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Battles"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.main.board.CommentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.board.WritingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.board.detail.BoardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileSettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.profile.editprofile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.umc.battles.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>